<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Desk Reviews
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-7">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <% if @desk.image.attached? %>
                <%= image_tag @desk.image %>
              <% end %>
            </figure>
          </div>
        </div>
      </div>
        
     


<div class="column is-5">
<!--<div class="section mt-6">-->
<!--  <div class="container">-->
<!--    <div class="columns is-centered">-->
<!--      <div class="column is-5">-->
<!--        <div class="card mb-6">-->
<!--          <header class="card-header">-->
            <p class="card-header-title">
              <%= @desk.title %>
            </p>
          </header>
          <div class="card-content">
            <div class="content average-score">
              <div class="star-rating mb-2">

                <div class="star-rating-front" style="width: <%= @desk.review_score_percentage %>%">★★★★★</div>
                <div class="star-rating-back">★★★★★</div>
              </div>
              <div class="average-score-display ml-3 pt-2">

                <%= @desk.avg_score %>点（<%= @desk.reviews.count %>件のレビュー）
              </div>
            </div>
          </div>
        
        <table class="table is-fullwidth has-text-centered">
          <thead>
            <tr>
              <th>ユーザー</th><th>点数</th><th>レビュー</th><th>コメント</th>
            </tr>
          </thead>
          <tbody>
            <% @reviews.each do |review| %>
              <tr>
                <td><%= review.user.username %></td>
                <td><%= review.score %></td>
                <td><%= review.content %></td>
                <td><%= link_to "コメントを見る", desk_review_path(@reviews, @desk), class: "button is-success" %></td>

                <!--<td>レビュー更新ボタンとレビュー削除ボタン</td>-->
                <!--<td>%= link_to "Edit", edit_desk_review_path(@reviews, @desk), class: "button is-success" %></td>-->
                <!--<td>%= link_to "Destroy", desk_review_path(@reviews, @desk), method: :delete, "data-confirm" => "本当に消しますか？", class: "button is-success" %></td>-->

              </tr>

            <% end %>
          </tbody>
        </table>
        </div>
      </div>
    </div>
  </div>
  </div>
   </div>
     </div>
  　</div>
</section>