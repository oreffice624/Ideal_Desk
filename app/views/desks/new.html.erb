<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        NEW DESK
      </h1>
    </div>
  </div>
</section>

<% if @desk.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@desk.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @desk.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
         <%= form_with model: @desk, local: true do |f| %>
          <div class="field">
            <%= f.label :title, "Title", class: "label" %>
            <%= f.text_field :title, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :body, "Consept", class: "label" %>
            <%= f.text_area :body, class: "textarea" %>
          </div>

          <div class="field">
            <%= f.label :image, "Image", class: "label" %>
            <%= f.file_field :image, accept: "image/*", class: "input" %>
          </div>
          <%= f.submit 'SUBMIT', class: "button is-success" %>
              <% end %>
      </div>
   </div>
  </div>
</section>



      