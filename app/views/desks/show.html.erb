<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Desk Tour
      </h1>
    </div>
  </div>
</section>
<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-7">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <% if @desk.image.attached? %>
                <%= image_tag @desk.image %>
              <% end %>
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              
              <div class="media-content">
                
               <p class="title is-1"><%= @desk.title %></p>
              </div>
            </div>
           <div class="content">
              <table class="table is-narrow">
                <tr>
                  <th>CONCEPT</th>
                </tr>
                <tr>
                  <td><%= simple_format @desk.body %></td>
                </tr>
              </table>
              <% if @desk.user.id == current_user.id %>
                <%= link_to "Edit", edit_desk_path(@desk), class: "button is-success" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="column is-4">
        <article class="panel is-link">
          <p class="panel-heading">
            By <%= @desk.user.username %>
          </p>
          <div class="panel-block">
            <p class="control">
              <%= @desk.user.profile %>
            </p>
          </div>
          <%= link_to user_path(@desk.user), class: "panel-block" do %>
            <span class="panel-icon">
              <i class="fas fa-user" aria-hidden="true"></i>
            </span>
            <p class="detail-title-link "><%= @desk.user.username %> </p>











          <% end %>
        </article>
        <div class="card-content">
            <div class="content average-score">
              <div class="star-rating mb-2">

                <div class="star-rating-front" style="width: <%= @desk.review_score_percentage %>%">★★★★★</div>
                <div class="star-rating-back">★★★★★</div>
              </div>
              <div class="average-score-display ml-3 pt-2">

                <%= @desk.avg_score %>点（<%= @desk.reviews.count %>件のレビュー）
              </div>
            </div>
          </div>
        


        <%= render 'reviews/form', review: @review, desk: @desk %>
      
        </div>
        


          </div>
        </div>
      </div>
    </div>
  </div>
</section>